<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+US+Modern:wght@100..400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles/style.css">
    <title>TO do</title>
</head>
<body>
    <form action="/add" method="post">
        <input id="task" type="text" name="data" placeholder="Add Task" >
        <button type="submit">add</button>
    
        <% if(locals.list){ %>
        <% list.forEach(function (list) {%>
            <li class="todo todo_<%= list.id %>"><%= list.task %> 
                 <% if(list.check) {%>
                    <input id="check" type="checkbox" checked onchange="check_box(<%=list.id%>,this.checked)">
                <% } else { %>
                    <input id="check" type="checkbox"  onchange="check_box(<%=list.id%>,this.checked)">
                <% } %>
                
                 <img src="/assets/edit.svg" alt="edit-icon" class="edit <%= list.id %>" >
                 <img src="/assets/delete.svg" alt="delete-icon" class="delete <%= list.id %>" >
            </li>    
       <% }); %>
       <% } %>
    </form>   
        
    <script src="script.js"></script>                                                                                 
</body>
</html>
